<h3>{{viewTitle}}</h3>

<form action="/tweet/AET" method="POST" autocomplete="off" data-toggle="validator">
    <input type="hidden" name="_id" value="{{tweet._id}}">
    <div class="form-group">
        <label>username</label>
        <input type="text" class="form-control" name="username" placeholder="username" value="{{tweet.username}}">
        <div class="text-danger">
            {{tweet.usernameError}}</div>
    </div>
    <div class="form-group">
        <label>Tweet</label>
        <input type="textarea" class="form-control" name="Tweet" placeholder="Tweet" value="{{tweet.Tweet}}">
        <div class="text-danger">
            {{tweet.tweetError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Date</label>
            <input type="datetime-local" class="form-control" name="Date" placeholder="Date" value="{{tweet.Date}}">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Hashtags</label>
            <input type="text" class="form-control" name="Hashtags" placeholder="hashtags" value="{{tweet.Hashtags}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/tweet/list"><i class="fa fa-list-alt"></i> View Tweets/Analyze</a>
    </div>
</form>